<%= form_for(@feedback) do |f| %>
  <% if @feedback.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@feedback.errors.count, "error") %> prohibited this feedback from being saved:</h2>

      <ul>
      <% @feedback.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username, :placeholder => "Optional" %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email, :placeholder => "Optional"%>
  </div>
  <div class="field">
    <%= f.label :message %><br />
    <%= f.text_area :message, :placeholder => "Please leave your thoughts about this site!", :size => 5 %>
  </div>
  <div class="actions">
    <%= f.submit "Submit"%>
  </div>
<% end %>
